<div class="custom_widget">
  <p>Click on image for more info</p>
  <% if @dresses.products.any? %>
    <% @dresses.products.each do |product| %>
      <% if product["description"].include?("silk") || product["description"].include?("satin") %>
      <div class="product">
        <a class = "item" href=<%= product['pageUrl'] %>><%= image_tag product["image"]["sizes"]["XLarge"]["url"], :class => "style_image" %></a>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
