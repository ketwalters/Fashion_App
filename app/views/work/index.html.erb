<div class="custom_widget">
  <% if @work_blazers.products.any? %>
    <% @work_blazers.products.each do |product| %>
      <% if product["description"].include?("wool") || product["description"].include?("twill") %>
      <div class="product">
        <a class = "item" href=<%= product['pageUrl'] %>><%= image_tag product["image"]["sizes"]["XLarge"]["url"], :class => "style_image" %></a>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>